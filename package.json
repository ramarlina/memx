{
  "name": "@mndrk/memx",
  "version": "0.3.3",
  "description": "Persistent memory for AI agents - git-backed, branch-per-task, CLI interface",
  "main": "index.js",
  "bin": {
    "mem": "./index.js"
  },
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "branches": 78,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "testPathIgnorePatterns": ["/node_modules/"],
    "coveragePathIgnorePatterns": ["/node_modules/", "/test/"]
  },
  "keywords": [
    "ai",
    "agent",
    "memory",
    "cli",
    "persistent",
    "llm",
    "context"
  ],
  "author": "Mendrika Ramarlina",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ramarlina/memx"
  },
  "devDependencies": {
    "jest": "^30.2.0"
  }
}
